<!-- Main Content -->
  <div class="container">
      <h1>Edit {{dog.name}}'s Profile</h1>
      <hr>
	<div class="row">
      <!-- left column -->
      <div class="col-md-4">
        <div class="text-center">
          <img id="upload_ID" style="max-height: 350px; max-width: 350px" src="../uploads/{{dog.image}}" class="avatar img-circle" alt="avatar">
          <h6>Upload a different photo...</h6>
          
          <form method="post" action="admin_edit_dog" class="form-horizontal" role="form" enctype="multipart/form-data">
            <input type="file" onchange="previewFile()" id="avatar" class="form-control" accept="image/jpg, image/png" name="dog_image">  
        </div>
      </div>
        
          <!-- edit form column -->
      <div class="col-md-8 personal-info">
        <div class="alert alert-info alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">Ã—</a> 
          <i class="fa fa-exclamation-triangle"></i>
          <strong>NOTE: </strong> The site will automatically save your edits and display them for all user screens.
        </div>
        <h3>General Information</h3>
        
          <div class="form-group">
            <label class="col-lg-3 control-label">Name:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" name="dog_name" value="{{dog.name}}">
            </div>
          </div>
            <div class="form-group">
            <label class="col-lg-3 control-label">Breed:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" name="dog_breed" value="{{dog.breed}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Date of birth:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" name="dog_birthday" value="{{dog.birthday}}">
            </div>
          </div>
          
          <div class="row" style="margin-left:1px">
                            <div class="col-sm-3 form-group">
								<label>Gender: </label>
								<input type="text" class="form-control" name="dog_gender" value="{{dog.gender}}">
							</div>
							<div class="col-sm-3 form-group">
								<label>Height (inches): </label>
								<input type="text" class="form-control" name="dog_height" value="{{dog.height}}"> 
							</div>
                            <div class="col-sm-3 form-group">
								<label>Weight (pounds): </label>
								<input type="text" class="form-control" name="dog_weight" value="{{dog.weight}}">
							</div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Specific conditions:</label>
            <div class="col-md-8">
              <input class="form-control" type="text" name="dog_conditions" value="{{dog.conditions}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
                <input type = "hidden" name="id" value="{{dog._id}}">
              <input type="submit" class="btn btn-primary" value="Save Changes">
              <span></span>
                <a href = 'admin_dogs.hbs'><button class="btn btn-default">Cancel</button></a>
            </div>
          </div>
        </form>
      </div>
      
    </div>
